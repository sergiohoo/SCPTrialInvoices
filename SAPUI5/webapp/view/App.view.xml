<mvc:View controllerName="namespace.SAPUI5.controller.App"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>appTitle}">
                    <content>
                        <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
                            <content>
                                <Button text="{i18n>showHelloButtonText}"
                                    press=".onShowHello" class="sapUiSmallMarginEnd" />
                                <Input value="{/recipient/name}"
                                    width="60%" valueLiveUpdate="true"/>
                                <Text text="Hello {/recipent/name}"
                                    class="boldElements sapUiSmallMargin"/>
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>