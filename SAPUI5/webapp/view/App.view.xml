<mvc:View controllerName="namespace.SAPUI5.controller.App"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true">
    <App>
        <pages>
            <Page title="{i18n>appTitle}">
                <content>
                    <Button text="{i18n>showHelloButtonText}"
                            press=".onShowHello"></Button>
                    <Input value="{/recipient/name}"
                        description="Hello {/recipient/name}"
                        width="60%" valueLiveUpdate="true"></Input>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>